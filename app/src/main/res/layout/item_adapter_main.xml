<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="br.com.raveline.roomjetpack.viewmodel.SubscriberViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_itemAdapter_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:cardBackgroundColor="#F5F3F6"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/ll_itemAdapter_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_name_adapter_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Batata" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="#92CFCCCC" />

            <TextView
                android:id="@+id/tv_email_adapter_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Batata" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="#92CFCCCC" />

            <TextView
                android:id="@+id/tv_peculiarities_adapter_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="casual"
                android:padding="8dp"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Batata" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>